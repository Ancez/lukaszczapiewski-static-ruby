{
  "name": ".",
  "version": "1.0.0",
  "description": "Static site generated with static-site-generator",
  "scripts": {
    "build": "esbuild app/javascript/application.js --bundle --format=esm --minify --outdir=dist/assets/javascripts",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.css -o ./dist/assets/stylesheets/application.css --minify",
    "watch:css": "tailwindcss -i ./app/assets/stylesheets/application.css -o ./dist/assets/stylesheets/application.css --watch"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "canvas-confetti": "^1.9.4"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "esbuild": "^0.20.2",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0"
  }
}
