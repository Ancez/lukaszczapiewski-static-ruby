<% @js_modules = ['application'] %>

<%# Define project variables %>
<% @project_title = 'Static Site Builder' %>
<% @project_description = 'A Ruby gem for building static HTML sites. Choose your stack: ERB or Phlex, Importmap or ESBuild/Webpack/Vite, TailwindCSS or shadcn, Stimulus or React/Vue/Alpine.' %>
<% @project_tags = ['Ruby', 'ERB/Phlex', 'Importmap', 'TailwindCSS', 'Stimulus'] %>
<% @project_github_url = 'https://github.com/Ancez/static-site-builder' %>
<% @project_external_url = @project_github_url %>

<%= render layout: 'shared/projects/layout' do %>
  <div class="space-y-8">
    <div class="apple-glass p-8 md:p-10">
      <h2 class="text-2xl font-bold text-white mb-4">About</h2>
      <p class="text-slate-300 leading-relaxed mb-4">
        A Ruby gem for building static HTML sites with working JavaScript. No backend required - just compile your templates to static HTML and deploy anywhere.
      </p>
      <p class="text-slate-300 leading-relaxed mb-4">
        Choose your own stack: ERB or Phlex for templates, Importmap or ESBuild/Webpack/Vite for JavaScript bundling, TailwindCSS or shadcn for styling, and Stimulus or React/Vue/Alpine for interactivity.
      </p>
    </div>
  </div>
<% end %>
