<% @project_tags = ['Ruby', 'Rails', 'ERB'] %>
<% @project_github_url = 'https://github.com/Ancez/templates-rails' %>
<% @project_external_links = [
  { url: 'https://github.com/Ancez/templates-rails', text: 'View on GitHub', icon: 'github' },
