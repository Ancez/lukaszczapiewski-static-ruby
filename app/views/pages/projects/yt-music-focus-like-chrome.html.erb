<% @js_modules = ['application'] %>

<%# Define project variables %>
<% @project_title = 'YouTube Music Auto Like' %>
<% @project_description = 'Chrome extension that automatically likes YouTube Music songs when the browser window gains focus, with keyboard shortcuts and smart duplicate prevention. Built for myself to use on my Omarchy setup.' %>
<% @project_tags = ['JavaScript', 'Chrome Extension'] %>
<% @project_github_url = 'https://github.com/Ancez/yt-music-focus-like-chrome' %>
