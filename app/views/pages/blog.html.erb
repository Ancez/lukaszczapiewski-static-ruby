<div class="min-h-screen dark:bg-slate-950 bg-slate-50 dark:text-white text-slate-900 relative overflow-hidden">
  <!-- Animated Background -->
  <canvas data-controller="particles" class="fixed inset-0 w-full h-full opacity-30 pointer-events-none"></canvas>
  
  <!-- Gradient Orbs -->
  <div class="fixed top-0 left-1/4 w-96 h-96 bg-indigo-500/20 rounded-full blur-3xl animate-pulse pointer-events-none"></div>
  <div class="fixed bottom-0 right-1/4 w-96 h-96 bg-blue-500/20 rounded-full blur-3xl animate-pulse pointer-events-none" style="animation-delay: 1s;"></div>

  <!-- Blog Section -->
  <section class="relative min-h-screen flex items-start px-4 sm:px-6 lg:px-8 pt-32 pb-20">
    <div class="max-w-4xl mx-auto w-full">
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-7xl font-bold mb-6">
          <span class="bg-gradient-to-r from-indigo-400 to-blue-400 bg-clip-text text-transparent">
            Blog
          </span>
        </h1>
        <p class="text-xl dark:text-slate-400 text-slate-600 max-w-2xl mx-auto mb-4">
          Thoughts, tutorials, and insights on development, technology, and building things.
        </p>
        <a href="/feed.xml" class="inline-flex items-center dark:text-slate-400 text-slate-600 dark:hover:text-indigo-400 hover:text-indigo-600 transition-colors text-sm">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z"/>
          </svg>
          RSS Feed
        </a>
      </div>

      <div class="space-y-6">
        <% PageHelpers::BLOG_POSTS.sort_by { |post| -post[:date].to_time.to_i }.each do |post| %>
          <a href="/blog/<%= post[:slug] %>" class="group apple-glass p-8 hover:border-indigo-500/50 transition-all block cursor-pointer">
            <div class="flex items-start justify-between mb-4">
              <div class="flex-1">
                <h3 class="text-2xl font-bold dark:text-white text-slate-900 mb-2">
                  <%= post[:title] %>
                </h3>
                <div class="flex items-center gap-4 flex-wrap">
                  <p class="dark:text-slate-500 text-slate-600 text-sm">
                    <%= post[:date].strftime('%B %d, %Y') %>
                  </p>
                  <% 
                    file_path = File.join(Dir.pwd, 'app', 'views', 'pages', 'blog', "#{post[:slug]}.html.erb")
                    minutes = File.exist?(file_path) ? PageHelpers.reading_time(file_path) : 1
                  %>
                  <p class="dark:text-slate-500 text-slate-600 text-sm flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    ~<%= minutes %> <%= minutes == 1 ? 'min' : 'mins' %> read
                  </p>
                </div>
              </div>
            </div>
            <p class="dark:text-slate-300 text-slate-700 mb-6 leading-relaxed">
              <%= post[:description] %>
            </p>
            <div class="flex flex-wrap gap-2">
              <% post[:tags].each do |tag| %>
                <span class="px-3 py-1 bg-indigo-700/70 dark:bg-indigo-600/40 border border-indigo-700/80 dark:border-indigo-600/50 rounded-full text-xs text-indigo-50 dark:text-indigo-100"><%= tag %></span>
              <% end %>
            </div>
          </a>
        <% end %>
      </div>
    </div>
  </section>
</div>

<% content_for :javascript do %>
  <script type="module" src="/assets/javascripts/application.js"></script>
<% end %>
