<%# Shared layout for project detail pages - yields to block for content %>
<div class="min-h-screen dark:bg-slate-950 bg-slate-50 dark:text-white text-slate-900 relative overflow-hidden">
  <!-- Animated Background -->
  <canvas data-controller="particles" class="fixed inset-0 w-full h-full opacity-30 pointer-events-none"></canvas>
  
  <!-- Gradient Orbs -->
  <div class="fixed top-0 left-1/4 w-96 h-96 bg-indigo-500/20 rounded-full blur-3xl animate-pulse pointer-events-none"></div>
  <div class="fixed bottom-0 right-1/4 w-96 h-96 bg-blue-500/20 rounded-full blur-3xl animate-pulse pointer-events-none" style="animation-delay: 1s;"></div>

  <!-- Project Detail -->
  <article class="relative min-h-screen flex items-start px-4 sm:px-6 lg:px-8 pt-32 pb-20">
    <div class="max-w-4xl mx-auto w-full break-words">
      <a href="/projects" class="inline-flex items-center dark:text-slate-400 text-slate-600 dark:hover:text-indigo-400 hover:text-indigo-600 mb-12 transition-colors group">
        <svg class="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to Projects
      </a>

      <header class="mb-12">
        <div class="flex flex-wrap gap-2 mb-6">
          <% @project_tags.each do |tag| %>
            <span class="px-3 py-1 bg-indigo-700/70 dark:bg-indigo-600/40 border border-indigo-700/80 dark:border-indigo-600/50 rounded-full text-xs text-indigo-50 dark:text-indigo-100"><%= tag %></span>
          <% end %>
        </div>
        <% 
          # Derive slug from @current_page or use @project_slug if set
          project_slug = if defined?(@project_slug) && @project_slug
            @project_slug
          elsif defined?(@current_page) && @current_page
            @current_page.gsub(/^\/projects\//, '').gsub(/\/$/, '')
          else
            ''
          end
        %>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 leading-tight" data-view-transition-title="project-<%= project_slug %>">
          <span class="bg-gradient-to-r from-indigo-400 to-blue-400 bg-clip-text text-transparent">
            <%= @project_title %>
          </span>
        </h1>
        <p class="dark:text-slate-400 text-slate-700 text-lg mb-6 leading-relaxed break-words">
          <%= @project_description %>
        </p>
        <% 
          # Calculate reading time from source file and description
          # Derive slug from @current_page or use @project_slug if set
          slug = if defined?(@project_slug) && @project_slug
            @project_slug
          elsif defined?(@current_page) && @current_page
            @current_page.gsub(/^\/projects\//, '').gsub(/\/$/, '')
          end
          
          minutes = if slug
            file_path = File.join(Dir.pwd, 'app', 'views', 'pages', 'projects', "#{slug}.html.erb")
            if File.exist?(file_path)
              # Get file content and extract text
              file_content = File.read(file_path)
              erb_start = '<' + '%'
              erb_end = '%' + '>'
              erb_pattern = Regexp.new(erb_start + '.*?' + erb_end, Regexp::MULTILINE)
              file_text = file_content.gsub(erb_pattern, ' ')
                                      .gsub(/<[^>]*>/, ' ')
                                      .gsub(/\s+/, ' ')
                                      .strip
              
              # Add description if available
              combined_text = if defined?(@project_description) && @project_description
                "#{@project_description} #{file_text}"
              else
                file_text
              end
              
              PageHelpers.reading_time(combined_text)
            end
          end
          minutes ||= 1
        %>
        <p class="dark:text-slate-400 text-slate-600 text-lg flex items-center mb-6">
          <svg class="w-5 h-5 mr-2 dark:text-slate-500 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          ~<%= minutes %> <%= minutes == 1 ? 'minute' : 'minutes' %> read
        </p>
        <% if @project_external_links && !@project_external_links.empty? %>
          <div class="flex flex-wrap items-center gap-4">
            <% @project_external_links.each do |link| %>
              <a href="<%= link[:url] %>" target="_blank" class="inline-flex items-center dark:text-slate-400 text-slate-600 dark:hover:text-indigo-400 hover:text-indigo-600 transition-colors group break-words">
                <% if link[:icon] == 'github' %>
                  <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                <% elsif link[:icon] == 'rubygems' %>
                  <svg class="w-5 h-5 mr-2" fill="#f74c27" viewBox="0 0 200 200"><polygon points="68.8,69.9 68.7,69.8 46.5,92 100.4,145.8 122.6,123.7 154.3,92 132.1,69.8 132.1,69.7 68.7,69.7"/><path d="M100.2,10.6l-78.5,45v90l78.5,45l78.5-45v-90L100.2,10.6z M163.7,137l-63.5,36.6L36.7,137V64l63.5-36.6L163.7,64V137z"/></svg>
                <% elsif @project_logo_svg && link[:icon] != 'github' && link[:icon] != 'rubygems' %>
                  <%= raw @project_logo_svg %>
                <% else %>
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
                <% end %>
                <%= link[:text] %>
              </a>
            <% end %>
          </div>
        <% elsif @project_external_url && !@project_external_url.empty? %>
          <div class="flex flex-wrap items-center gap-4">
            <a href="<%= @project_external_url %>" target="_blank" class="inline-flex items-center dark:text-slate-400 text-slate-600 dark:hover:text-indigo-400 hover:text-indigo-600 transition-colors group break-words">
              <% if @project_logo_svg %>
                <%= raw @project_logo_svg %>
              <% elsif @project_github_url %>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
              <% else %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
              <% end %>
              <span class="ml-2"><%= @project_github_url ? 'View on GitHub' : 'Visit Website' %></span>
            </a>
          </div>
        <% end %>
      </header>

      <%# Yield to block for project-specific content %>
      <div class="break-words [&_pre]:overflow-x-auto [&_code]:break-all">
        <%= yield %>
      </div>
    </div>
  </article>
</div>

