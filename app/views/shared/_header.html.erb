<% current_page = @current_page || '' %>
<!-- Navigation -->
<nav class="fixed top-4 left-1/2 -translate-x-1/2 w-[calc(100%-2rem)] max-w-5xl dark:bg-slate-900/50 bg-white/80 backdrop-blur-xl dark:border-slate-800/50 border-slate-200/50 rounded-2xl shadow-xl z-50" data-controller="mobile-menu <%= current_page == '/' ? 'scroll-tracker' : '' %>">
  <div class="px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <a href="/" class="text-xl font-bold bg-gradient-to-r from-indigo-400 to-blue-400 bg-clip-text text-transparent">LC</a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex space-x-8">
        <a href="/" data-scroll-tracker-target="navItem" class="<%= current_page == '/' ? 'dark:text-white text-slate-900' : 'dark:text-slate-300 text-slate-600 dark:hover:text-white hover:text-slate-900' %> transition-colors relative group">
          Home
          <% if current_page == '/' %>
            <span class="absolute bottom-0 left-0 w-full h-0.5 bg-indigo-400"></span>
          <% else %>
            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-indigo-400 group-hover:w-full transition-all duration-300"></span>
          <% end %>
        </a>
        <a href="/#about" data-scroll-tracker-target="navItem" class="dark:text-slate-300 text-slate-600 dark:hover:text-white hover:text-slate-900 transition-colors relative group">
          About
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-indigo-400 group-hover:w-full transition-all duration-300"></span>
        </a>
        <a href="/projects" class="<%= current_page&.start_with?('/projects') ? 'dark:text-white text-slate-900' : 'dark:text-slate-300 text-slate-600 dark:hover:text-white hover:text-slate-900' %> transition-colors relative group">
          Projects
          <% if current_page&.start_with?('/projects') %>
            <span class="absolute bottom-0 left-0 w-full h-0.5 bg-indigo-400"></span>
          <% else %>
            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-indigo-400 group-hover:w-full transition-all duration-300"></span>
          <% end %>
        </a>
        <a href="/blog" class="<%= current_page&.start_with?('/blog') ? 'dark:text-white text-slate-900' : 'dark:text-slate-300 text-slate-600 dark:hover:text-white hover:text-slate-900' %> transition-colors relative group">
          Blog
          <% if current_page&.start_with?('/blog') %>
            <span class="absolute bottom-0 left-0 w-full h-0.5 bg-indigo-400"></span>
          <% else %>
            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-indigo-400 group-hover:w-full transition-all duration-300"></span>
          <% end %>
        </a>
        <a href="/#contact" data-scroll-tracker-target="navItem" class="dark:text-slate-300 text-slate-600 dark:hover:text-white hover:text-slate-900 transition-colors relative group">
          Contact
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-indigo-400 group-hover:w-full transition-all duration-300"></span>
        </a>
      </div>

      <!-- Mobile Hamburger Button -->
      <button 
        type="button"
        class="md:hidden p-2 dark:text-slate-300 text-slate-600 dark:hover:text-white hover:text-slate-900 transition-colors"
        data-mobile-menu-target="button"
        data-action="click->mobile-menu#toggle"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6" data-mobile-menu-target="hamburger" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg class="w-6 h-6 hidden" data-mobile-menu-target="close" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div 
      class="hidden md:hidden pb-4 pt-2 dark:border-t-slate-800/50 border-t-slate-200/50 overflow-hidden"
      data-mobile-menu-target="menu"
    >
      <div class="flex flex-col grow gap-4">
        <a 
          href="/" 
          data-scroll-tracker-target="navItem"
          class="mobile-menu-item <%= current_page == '/' ? 'dark:text-white text-slate-900' : 'dark:text-slate-300 text-slate-600 dark:hover:text-white hover:text-slate-900' %> transition-colors py-2"
          data-action="click->mobile-menu#close"
        >
          Home
        </a>
        <a 
          href="/#about" 
          data-scroll-tracker-target="navItem"
          class="mobile-menu-item dark:text-slate-300 text-slate-600 dark:hover:text-white hover:text-slate-900 transition-colors py-2"
          data-action="click->mobile-menu#close"
        >
          About
        </a>
        <a 
          href="/projects" 
          class="mobile-menu-item <%= current_page&.start_with?('/projects') ? 'dark:text-white text-slate-900' : 'dark:text-slate-300 text-slate-600 dark:hover:text-white hover:text-slate-900' %> transition-colors py-2"
          data-action="click->mobile-menu#close"
        >
          Projects
        </a>
        <a 
          href="/blog" 
          class="mobile-menu-item <%= current_page&.start_with?('/blog') ? 'dark:text-white text-slate-900' : 'dark:text-slate-300 text-slate-600 dark:hover:text-white hover:text-slate-900' %> transition-colors py-2"
          data-action="click->mobile-menu#close"
        >
          Blog
        </a>
        <a 
          href="/#contact" 
          data-scroll-tracker-target="navItem"
          class="mobile-menu-item dark:text-slate-300 text-slate-600 dark:hover:text-white hover:text-slate-900 transition-colors py-2"
          data-action="click->mobile-menu#close"
        >
          Contact
        </a>
      </div>
    </div>
  </div>
</nav>

