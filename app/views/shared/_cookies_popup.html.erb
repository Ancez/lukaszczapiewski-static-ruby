<div 
  data-controller="cookies"
  class="fixed bottom-0 left-0 right-0 z-[100] hidden"
  data-cookies-target="container"
>
  <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent dark:from-black/50 backdrop-blur-sm"></div>
  <div 
    class="p-4 md:p-6 opacity-0 translate-y-full transition-all duration-500 ease-out"
    data-cookies-target="popup"
  >
    <div class="max-w-4xl mx-auto apple-glass rounded-2xl p-6 md:p-8 shadow-2xl">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div class="flex-1">
        <h3 class="text-xl font-bold dark:text-white text-slate-900 mb-2">
          Cookies Notice
        </h3>
        <p class="dark:text-slate-300 text-slate-700 text-sm md:text-base">
          This website uses essential cookies to store your theme preference. We also use localStorage for game high scores. 
          <a href="/privacy-cookies" class="dark:text-indigo-400 text-blue-600 dark:hover:text-indigo-300 hover:text-blue-700 underline">
            Learn more
          </a>
        </p>
      </div>
      <div class="flex gap-3">
        <button
          type="button"
          data-action="click->cookies#dismiss"
          class="apple-glass-button px-6 py-3 font-medium text-sm md:text-base dark:text-white text-slate-900 whitespace-nowrap"
        >
          Got it
        </button>
      </div>
    </div>
    </div>
  </div>
</div>

